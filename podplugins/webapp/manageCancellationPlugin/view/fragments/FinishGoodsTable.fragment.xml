<core:FragmentDefinition 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">
    <Table id="goodsReceiptFinishGoodTable" items="{FINISH_GOOD>/}">
    <headerToolbar>
        <OverflowToolbar>
            <Title text="{= 'Finished Goods (' + ${FINISH_GOOD>/}.length + ')'}" />
            <ToolbarSpacer/>
            <Input 
                placeholder="Search" 
                liveChange="onGR_FG_Search" 
                width="10rem" />
            <Button icon="sap-icon://action-settings" press="onGoodsReceiptFGSettingsBtnPress" tooltip="Settings" visible="false"/>
        </OverflowToolbar>
    </headerToolbar>
        <columns>
    <Column><Text text="{i18n>inventoryId}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>batchId}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>huNumber}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>warehouseNumber}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>productionSupplyArea}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>storageBin}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>material}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>quantity}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>postedBy}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>postingDate}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>createdOn}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>storageLocation}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>comments}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>cancellationReason}"/></Column>
    <Column><Text text="{i18n>status}"/></Column>
    <Column><Text text="{i18n>action}"/></Column>
</columns>

        <items>
           <ColumnListItem>
                <VBox>
                    <ObjectIdentifier title="{FINISH_GOOD>inventoryId}"/>
                    <ObjectStatus 
                        state="Information"
                        inverted="true"
                        text="{FINISH_GOOD>postingTargetSystem}"/>
                </VBox>
                <Text text="{FINISH_GOOD>batch}"/>
                <Text text="{FINISH_GOOD>handlingUnit}"/>
                <Text text="{FINISH_GOOD>warehouseNumber}"/>
                <Text text="{FINISH_GOOD>psa}"/>
                <Text text="{FINISH_GOOD>psaBin}"/>
                <VBox>
                    <Text text="{
                        parts:['FINISH_GOOD>material', 'FINISH_GOOD>materialVersion']
                    }"/>
                    <Text text="{FINISH_GOOD>materialDescription}"/>
                </VBox>
                <Text text="{
                    parts:[
                        'FINISH_GOOD>quantityInInputUOM',
                        'FINISH_GOOD>inputUOM'
                    ]
                }"/>
                <Text text="{FINISH_GOOD>postedBy}"/>
                <!-- <Text text="{FINISH_GOOD>postingDateTime}"/> -->
                <Text text="{ path: 'FINISH_GOOD>postingDateTime', formatter: '.formatter.formatSingleDate' }" />
                <!-- <Text text="{FINISH_GOOD>createdDateTime}"/> -->
                <Text text="{ path: 'FINISH_GOOD>createdDateTime', formatter: '.formatter.formatDateAndTime' }" />
                <Text text="{FINISH_GOOD>storageLocation}"/>
                <Text text="{FINISH_GOOD>comments}"/>
                <Text text="{FINISH_GOOD>cancellationComments}"/>
                <!-- <ObjectStatus text="{FINISH_GOOD>status}"/> -->
                <Text text="{path: 'FINISH_GOOD>status', formatter: '.formatter.formatExecutionStatus'}" />
                <Button text="{i18n>cancelButton}" press="onCancelConfirmationPress">
                    <customData>
                        <core:CustomData key="cancelType" value='GR'/>
                        <core:CustomData key="dataModelName" value='FINISH_GOOD'/>
                    </customData>
                </Button>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>