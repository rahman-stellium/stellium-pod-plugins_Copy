<core:FragmentDefinition 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">
    <Table id="goodsReceiptByProductTable" items="{BY_PRODUCT>/}">
    <headerToolbar>
        <OverflowToolbar>
            <Title text="{= 'By-Products (' + ${BY_PRODUCT>/}.length + ')'}" />
            <ToolbarSpacer/>
            <Input 
                placeholder="Search" 
                liveChange="onGR_BP_Search" 
                width="10rem" />
            <Button icon="sap-icon://action-settings" press="onGoodsReceiptBPSettingsBtnPress" tooltip="Settings" visible="false"/>
        </OverflowToolbar>
    </headerToolbar>
        <columns>
    <Column><Text text="{i18n>inventoryId}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>batchId}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>huNumber}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>warehouseNumber}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>productionSupplyArea}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>storageBin}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>material}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>quantity}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>postedBy}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>postingDate}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>createdOn}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>storageLocation}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>comments}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>cancellationReason}"/></Column>
    <Column><Text text="{i18n>status}"/></Column>
    <Column><Text text="{i18n>action}"/></Column>
</columns>

        <items>
           <ColumnListItem>
                <VBox>
                    <ObjectIdentifier title="{BY_PRODUCT>inventoryId}"/>
                    <ObjectStatus 
                        state="Information"
                        inverted="true"
                        text="{BY_PRODUCT>postingTargetSystem}"/>
                </VBox>
                <Text text="{BY_PRODUCT>batch}"/>
                <Text text="{BY_PRODUCT>handlingUnit}"/>
                <Text text="{BY_PRODUCT>warehouseNumber}"/>
                <Text text="{BY_PRODUCT>psa}"/>
                <Text text="{BY_PRODUCT>psaBin}"/>
                <VBox>
                    <Text text="{
                        parts:['BY_PRODUCT>material', 'BY_PRODUCT>materialVersion']
                    }"/>
                    <Text text="{BY_PRODUCT>materialDescription}"/>
                </VBox>
                <Text text="{
                    parts:[
                        'BY_PRODUCT>quantityInInputUOM',
                        'BY_PRODUCT>inputUOM'
                    ]
                }"/>
                <Text text="{BY_PRODUCT>postedBy}"/>
                <!-- <Text text="{BY_PRODUCT>postingDateTime}"/> -->
                <Text text="{ path: 'BY_PRODUCT>postingDateTime', formatter: '.formatter.formatSingleDate' }" />
                <!-- <Text text="{BY_PRODUCT>createdDateTime}"/> -->
                <Text text="{ path: 'BY_PRODUCT>createdDateTime', formatter: '.formatter.formatDateAndTime' }" />
                <Text text="{BY_PRODUCT>storageLocation}"/>
                <Text text="{BY_PRODUCT>comments}"/>
                <Text text="{BY_PRODUCT>cancellationComments}"/>  
                <!-- <ObjectStatus text="{BY_PRODUCT>status}"/> -->
                <Text text="{path: 'CO_PRODUCT>status', formatter: '.formatter.formatExecutionStatus'}" />
                <Button text="{i18n>cancelButton}" press="onCancelConfirmationPress">
                    <customData>
                        <core:CustomData key="cancelType" value='GR'/>
                        <core:CustomData key="dataModelName" value='BY_PRODUCT'/>
                    </customData>
                </Button>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>