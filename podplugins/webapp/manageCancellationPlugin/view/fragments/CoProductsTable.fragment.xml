<core:FragmentDefinition 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">
    <Table id="goodsReceiptCoProductTable" items="{CO_PRODUCT>/}">
     <headerToolbar>
        <OverflowToolbar>
            <Title text="{= 'Co-Products (' + ${CO_PRODUCT>/}.length + ')'}" />
            <ToolbarSpacer/>
            <Input 
                placeholder="Search" 
                liveChange="onCR_BP_Search" 
                width="10rem" />
            <Button icon="sap-icon://action-settings" press="onGoodsReceiptCPSettingsBtnPress" tooltip="Settings" visible="false"/>
        </OverflowToolbar>
    </headerToolbar>
        <columns>
    <Column><Text text="{i18n>inventoryId}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>batchId}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>huNumber}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>warehouseNumber}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>productionSupplyArea}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>storageBin}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>material}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>quantity}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>postedBy}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>postingDate}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>createdOn}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>storageLocation}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>comments}"/></Column>
    <Column minScreenWidth="Desktop" demandPopin="true"><Text text="{i18n>cancellationReason}"/></Column>
    <Column><Text text="{i18n>status}"/></Column>
    <Column><Text text="{i18n>action}"/></Column>
</columns>


        <items>
           <ColumnListItem>
                <VBox>
                    <ObjectIdentifier title="{CO_PRODUCT>inventoryId}"/>
                    <ObjectStatus 
                        state="Information"
                        inverted="true"
                        text="{CO_PRODUCT>postingTargetSystem}"/>
                </VBox>
                <Text text="{CO_PRODUCT>batch}"/>
                <Text text="{CO_PRODUCT>handlingUnit}"/>
                <Text text="{CO_PRODUCT>warehouseNumber}"/>
                <Text text="{CO_PRODUCT>psa}"/>
                <Text text="{CO_PRODUCT>psaBin}"/>
                <VBox>
                    <Text text="{
                        parts:['CO_PRODUCT>material', 'CO_PRODUCT>materialVersion']
                    }"/>
                    <Text text="{CO_PRODUCT>materialDescription}"/>
                </VBox>
                <Text text="{
                    parts:[
                        'CO_PRODUCT>quantityInInputUOM',
                        'CO_PRODUCT>inputUOM'
                    ]
                }"/>
                <Text text="{CO_PRODUCT>postedBy}"/>
                <!-- <Text text="{CO_PRODUCT>postingDateTime}"/> -->
                <Text text="{ path: 'CO_PRODUCT>postingDateTime', formatter: '.formatter.formatSingleDate' }" />
                <!-- <Text text="{CO_PRODUCT>createdDateTime}"/> -->
                <Text text="{ path: 'CO_PRODUCT>createdDateTime', formatter: '.formatter.formatDateAndTime' }" />
                <Text text="{CO_PRODUCT>storageLocation}"/>
                <Text text="{CO_PRODUCT>comments}"/>
                <Text text="{CO_PRODUCT>cancellationComments}"/>  
                <!-- <ObjectStatus text="{CO_PRODUCT>status}"/> -->
                <Text text="{path: 'CO_PRODUCT>status', formatter: '.formatter.formatExecutionStatus'}" />
                <Button text="{i18n>cancelButton}" press="onCancelConfirmationPress">
                    <customData>
                        <core:CustomData key="cancelType" value='GR'/>
                        <core:CustomData key="dataModelName" value='CO_PRODUCT'/>
                    </customData>
                </Button>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>